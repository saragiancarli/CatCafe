        nomeErrorLabel.setVisible(false);
        cognomeErrorLabel.setVisible(false);
        emailConfermaErrorLabel.setVisible(false);
        indirizzoErrorLabel.setVisible(false);
        telefonoErrorLabel.setVisible(false);
    }

